<div class="page">
    <a href="{{url}}">
        <p class="article__date">{{date}}</p>
        <h3 class="article__title h2">{{item.title}}</h3>
        {{#if item.images}}<figure class="article__image"><img src="/assets/img/{{item.images}}" alt="" /></figure>{{/if}}
        <p class="article__description">{{item.description}}</p>
    </a>
</div>
